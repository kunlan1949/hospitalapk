<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".IllsHouse">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#98AED7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            >

            <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:id="@+id/refresh"
                android:background="#0000"
                android:src="@drawable/ic_refresh"
                />/
            <TextView
                android:id="@+id/sql"
                android:layout_weight="1"
                android:text="获取数据"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:theme="@style/MyEditText2"
                android:textCursorDrawable="@drawable/cursor_color"
                android:hint="请输入病人信息进行查询"
                />
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="0.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_searching"
                android:textColor="#ffffff"
                android:text="搜索"
                android:background="#55b683"
                />
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="#edb3afaf"
            android:layout_height="wrap_content" >

            <TextView

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="编号" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:singleLine="true"
                android:gravity="center"
                android:text="病床号" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:paddingBottom="10dip"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:textSize="15sp"
                android:gravity="center"
                android:text="姓名" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="15sp"
                android:gravity="center"
                android:text="性别" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>
            <TextView

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dip"
                android:textColor="#000000"
                android:textSize="15sp"
                android:singleLine="true"
                android:paddingTop="10dip"
                android:gravity="center"
                android:text="年龄" />

            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:paddingBottom="10dip"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:gravity="center"
                android:text="联系方式" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingBottom="10dip"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:gravity="center"
                android:text="主治医师" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingBottom="10dip"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:gravity="center"
                android:text="身份证号" />
            <View
                android:layout_width="1.5dip"
                android:layout_height="fill_parent"
                android:background="#B4B3B3"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:paddingBottom="10dip"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingTop="10dip"
                android:gravity="center"
                android:text="病情描述" />
        </LinearLayout>

            <ListView
            android:id="@+id/list_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="20dp">

        </ListView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_1_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#98AED7"
                android:textSize="18sp"
                android:text="查询" />

            <Button
                android:id="@+id/btn_2_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#98AED7"
                android:textSize="18sp"
                android:text="设置" />

            <Button
                android:id="@+id/btn_3_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#80c6fd"
                android:textSize="18sp"
                android:text="病患列表" />

            <Button
                android:id="@+id/btn_4_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#98AED7"
                android:textSize="18sp"
                android:text="用户中心" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>